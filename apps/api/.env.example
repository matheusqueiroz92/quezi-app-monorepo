# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================
PORT=3333
HOST=0.0.0.0
NODE_ENV=development

# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
DB_USER=userquize
DB_PASSWORD=passwordquize
DB_NAME=quize_db
DB_HOST=localhost
DB_PORT=5432
ADMIN_PASSWORD=your-password-super-admin

# URL de conexão do Prisma
DATABASE_URL=postgresql://userquize:passwordquize@localhost:5432/quize_db?schema=public

# ========================================
# CONFIGURAÇÕES DO PGADMIN
# ========================================
PGADMIN_EMAIL=admin@quize.com
PGADMIN_PASSWORD=admin_secure_password
PGADMIN_PORT=5050

# ========================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ========================================
# CONFIGURAÇÕES DE EMAIL (Node Mailer)
# ========================================
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=

# ========================================
# CONFIGURAÇÕES DE OAUTH (Google)
# ========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3333/auth/google/callback

# ========================================
# CONFIGURAÇÕES DE UPLOAD
# ========================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
